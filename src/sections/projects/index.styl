section.section.proyectos
  background #fff
  background-size 110%
  min-height 400px

  .proyectos-content
    display flex
    flex-flow row wrap
    justify-content center

    .proyectos-item
      position relative
      min-width 250px
      max-width 300px
      padding 1px 1px

  .projects
    text-align center

    .project-card
      height 200px
      transition all 0.4s ease

      .expand
        position relative

      .description-overlay
        position absolute
        top auto
        left 0
        min-width 100%
        height 0
        background-color red
        overflow hidden
        transition all 0.4s ease

        .close
          float right
          font-size 40px

      &.expanded
        height 460px

        .expand:after
          top auto
          border solid transparent
          content " "
          height 0
          width 0
          position absolute
          pointer-events none
          border-bottom-color red
          border-width 15px
          left 50%
          margin -20px 0 0 -15px
          bottom -92px

        .description-overlay
          height 200px

