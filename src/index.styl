.align-center
  text-align center

span.flaticon.social
  margin-right 8px

a
  border 0
  outline none !important
  box-shadow none !important

body
  font-family "Open Sans", sans-serif
  background #059ebd url("../images/bg-splash.jpg") left bottom fixed
  background-size cover
  -webkit-font-smoothing antialiased
  /* Fix for webkit rendering */
  -webkit-text-size-adjust 100%

h1 h2 h3 h4 h5 h6,
.btn
  font-family "Open Sans"
  font-weight bold

.modal
  border-radius: 0

  .modal-header
  text-transform uppercase

    h3
      font-size 20px
      padding 20px

  label
    text-align left

.popover
  border-radius 0

  .popover-title
    background #fff
    text-transform uppercase
    font-size 11px
    letter-spacing 2px

.hide
  display none

.btn
  text-transform uppercase
  letter-spacing 2px
  font-size 12px
  background #fff
  display inline-block
  padding 12px 24px
  border-radius 0px
  text-decoration none
  border 2px solid #333
  color #333
  text-shadow none
  border-width 2px
  box-shadow none

  &.view-source
  position relative
  text-indent 30px
  margin-right 30px

    &:before
      content ""
      display block
      width 32px
      height 32px
      background url(../images/github-logo.png) no-repeat top
      position absolute
      top 5px
      left 10px

    &:hover
      &:before
        background url(../images/github-logo.png) no-repeat bottom

  &.mexico
    margin-left 28px

  &:hover
    background-color #333
    color #fff

  &.btn-white
    background #fff
    box-shadow none

.container
