      font-size 20px
      padding 20px

  label
    text-align left

.popover
  border-radius 0

  .popover-title
    background #fff
    text-transform uppercase
    font-size 11px
    letter-spacing 2px

.hide
  display none

.btn
  text-transform uppercase
  letter-spacing 2px
  font-size 12px
  background #fff
  display inline-block
  padding 12px 24px
  border-radius 0px
  text-decoration none
  border 2px solid #333
  color #333
  text-shadow none
  border-width 2px
  box-shadow none

